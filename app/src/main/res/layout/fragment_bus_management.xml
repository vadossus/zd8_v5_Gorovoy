<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="На экран входа"
        android:textColor="@android:color/white"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="260dp"
/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Тип топлива"/>
    <Spinner
        android:id="@+id/spinnerFuelType"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_height="34dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextYearOfManufacture"
        android:layout_width="match_parent"
        android:hint="Год выпуска"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="number"
        android:background="@drawable/edit"
        android:layout_height="34dp"
        android:paddingLeft="18dp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/editTextNumberOfSeats"
        android:layout_width="match_parent"
        android:hint="Количество сидячих мест"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/edit"
        android:layout_height="34dp"
        android:paddingLeft="18dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextMaxServiceLife"
        android:layout_width="match_parent"
        android:hint="Максимальный срок службы (лет)"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="number"
        android:background="@drawable/edit"
        android:layout_height="34dp"
        android:paddingLeft="18dp"
        android:layout_marginTop="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/buttonAddBus"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Добавить
             автобус"
             />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:id="@+id/buttonEditBus"
            android:background="@drawable/button"
            android:layout_weight="1"

            android:text="Редактировать автобус"
            android:textColor="@color/white" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Список автобусов"
        android:textSize="24dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recyclerViewBuses"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@drawable/edit"
        android:padding="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/buttonViewBuses"
            android:layout_width="0dp"
            android:text="Посмотреть автобусы"
            android:layout_weight="1"
            android:layout_height="38dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/buttonDeleteBuses"
            android:layout_width="0dp"
            android:text="Удалить автобусы"
            android:layout_weight="1"
            android:layout_height="38dp"
            android:background="@drawable/button"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>